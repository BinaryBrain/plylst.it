<%= form_for(song) do |f| %>
  <% if song.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(song.errors.count, "error") %> prohibited this song from being saved:</h2>

      <ul>
      <% song.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.text_field :original_url, placeholder: "URL from YouTube/Soundcloud/etc." %>
  </div>

  <canvas id="spinner" width="500"></canvas>

  <div class="field song-checkboxes">
    <%=collection_check_boxes(:song, :playlist_ids, current_user.playlists, :id, :name)%>
  </div>

  <div class="actions">
    <%= f.submit "Add" %>
  </div>
<% end %>
